---
import type { HTMLAttributes } from 'astro/types';
import { cva, type VariantProps } from 'class-variance-authority';
import { cn } from 'src/utils/cn';

const linkVariants = cva('', {
  variants: {
    variant: {
      default:
        'inline-block text-accent bg-transparent hover:text-accent-700 focus:text-accent-700 relative border-transparent before:content-[""] before:absolute before:w-full before:h-0.5 before:rounded before:bg-accent-700 before:origin-right before:transition-transform before:duration-[0.1s] before:ease-in-out before:scale-x-0 before:left-0 before:-bottom-0.5 hover:before:origin-left focus:before:origin-left hover:before:scale-x-100 focus:before:scale-x-100',
      contained:
        'inline-block text-primary font-semibold bg-accent rounded-md border-comic border-secondary shadow-comic shadow-secondary -translate-x-0.5 -translate-y-0.5 transition-all hover:bg-accent-700 focus:bg-accent-700 hover:translate-x-0 focus:translate-x-0 hover:translate-y-0 focus:translate-y-0 hover:scale-95 focus:scale-95 hover:shadow-comic-pressed focus:shadow-comic-pressed',
      outlined:
        'inline-flex items-center relative text-accent font-semibold bg-transparent rounded-md border-comic border-accent transition-all overflow-hidden hover:text-primary focus:text-primary hover:border-secondary focus:border-secondary before:content-[""] before:absolute before:h-full before:w-full before:-z-10 before:bg-accent-700 before:transition-transform before:duration-[0.15s] before:ease-in-out before:-translate-x-full hover:before:-translate-x-4 focus:before:-translate-x-4 ]',
      unstyled: '',
    },
    size: {
      small: ['text-sm'],
      medium: ['text-base'],
    },
  },
  defaultVariants: {
    variant: 'default',
    size: 'medium',
  },
  compoundVariants: [
    { variant: ['contained', 'outlined'], size: 'small', class: 'py-1 px-2' },
    { variant: ['contained', 'outlined'], size: 'medium', class: 'py-2 px-4' },
    {
      variant: ['outlined'],
      size: 'medium',
      class: 'before:-translate-x-[calc(100%+0.5rem)]',
    },
    {
      variant: ['outlined'],
      size: 'medium',
      class: 'before:-translate-x-[calc(100%+1rem)]',
    },
  ],
});

export type LinkProps = VariantProps<typeof linkVariants>;
interface Props extends HTMLAttributes<'a'>, LinkProps {}

/**
 * For Astro components, we recommend setting your defaultVariants within
 * Astro.props (which are `undefined` by default)
 */
const { class: className, variant, size, href, ...props } = Astro.props;
---

<a
  href={href}
  class={cn(linkVariants({ variant, size }), className)}
  {...props}
>
  <slot />
</a>

<script></script>
