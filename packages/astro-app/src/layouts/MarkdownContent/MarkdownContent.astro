---
import { MarkdownComponents } from '@components/Markdown';
import type { CollectionEntry } from 'astro:content';
import '@styles/markdown.css';
import { serverLogger } from '@utils/logs/logger';

serverLogger.setShowTimestamp(true);
serverLogger.error('hello');
export type MarkdownContentProps = {
  entry: CollectionEntry<'posts'>;
};

type Props = MarkdownContentProps;

const { entry }: Props = Astro.props;

const { Content, headings } = await entry.render();
---

<article class='markdown-content'>
  <Content components={MarkdownComponents} />
</article>

<script>
  import { clientLogger } from '@utils/logs/logger';

  clientLogger.info('hello');
  clientLogger.setShowColoredOutput(true);
  clientLogger.info('hello2');
  clientLogger.warn('hello3');
</script>
