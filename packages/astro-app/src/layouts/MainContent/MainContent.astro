---
import type { HTMLAttributes } from 'astro/types';
import { cn } from '../../utils/cn';

export interface MainContentProps {}

interface Props extends HTMLAttributes<'main'>, MainContentProps {}

const { class: className, ...props }: Props = Astro.props;
---

<main
  class={cn(
    '[grid-area:main-content] grow max-w-7xl w-full justify-self-center',
    className,
  )}
  {...props}
>
  <slot />
</main>
