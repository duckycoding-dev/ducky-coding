---
import { Navbar } from '@components/Navbar';
import type { HTMLAttributes } from 'astro/types';
import { Image } from 'astro:assets';
import DuckyCodingLogo from '@assets/images/DuckyCoding_logo.png';
import { Link } from '../../components/Link';
import { HamburgerToggle } from '@components/HamburgerToggle';

export interface HeaderProps {}

interface Props extends HTMLAttributes<'header'>, HeaderProps {}

const { class: className, ...props } = Astro.props;
---

<header
  class='bg-primary-700 border-comic border-secondary sticky top-0 z-10 py-4 [grid-area:header]'
>
  <div class='mx-auto flex max-w-7xl items-center justify-between gap-x-8 px-8'>
    <HamburgerToggle class='peer z-10 shrink-0 md:hidden' />
    <div class='mx-auto md:mx-0'>
      <Link href='/' variant='unstyled' class='md:justify-start' id='logo'>
        <Image
          alt={'DuckyCoding logo'}
          src={DuckyCodingLogo}
          width={50}
          class='max-w-none'
        />
      </Link>
    </div>
    <Navbar
      id='navbar'
      class='fixed overflow-hidden transition-transform peer-checked:flex peer-checked:translate-x-0 peer-[:not(checked)]:-translate-x-full md:ml-auto md:peer-[:not(checked)]:translate-x-0'
    />
    <div class='flex items-center gap-4 text-2xl'>
      <Image
        alt={'DuckyCoding logo'}
        src={DuckyCodingLogo}
        width={50}
        class='max-w-none'
      />
    </div>
  </div>
</header>

<style>
  #navbar {
    transform: translateX(100px);
    transition-duration: 1s;
    transition-property: all;
    transition-timing-function: cubic-bezier();
  }

  #logo:checked {
    transform: translateX(1000px);
  }
</style>
