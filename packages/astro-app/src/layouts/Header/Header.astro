---
import { Navbar } from '@components/Navbar';
import type { HTMLAttributes } from 'astro/types';
import { Image } from 'astro:assets';
import DuckyCodingLogo from '@assets/images/DuckyCoding_logo.png';
import { Link } from '../../components/Link';
import { HamburgerToggle } from '@components/HamburgerToggle';

export interface HeaderProps {}

interface Props extends HTMLAttributes<'header'>, HeaderProps {}

const { class: className, ...props } = Astro.props;
---

<header
  class='bg-primary-700 border-comic border-secondary sticky flex items-center justify-between gap-x-8 px-8 py-4 [grid-area:header]'
>
  <HamburgerToggle class='z-5000 peer shrink-0 md:hidden' />
  <Link
    href='/'
    variant='unstyled'
    class='flex grow items-center justify-center gap-4 font-semibold md:justify-start'
    id='logo'
  >
    <Image
      alt={'DuckyCoding logo'}
      src={DuckyCodingLogo}
      width={50}
      class='max-w-none'
    />
    <span id='logo-text' class='text-primary text-3xl md:hidden lg:block'
      >DuckyCoding</span
    >
  </Link>
  <Navbar
    class='peer-checked:hidden peer-checked:-translate-x-full md:ml-auto md:peer-checked:flex md:peer-checked:translate-x-0'
  />
  <div class='flex shrink-0 items-center gap-4 text-2xl'>
    <Image alt={'DuckyCoding logo'} src={DuckyCodingLogo} width={50} />
  </div>
</header>

<style>
  #logo {
    container-type: inline-size;
    container-name: logo;
  }
  @container logo (width < 250px) {
    #logo-text {
      display: none;
    }
  }
</style>
