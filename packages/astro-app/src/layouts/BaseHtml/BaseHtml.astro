---
import type { HTMLAttributes } from 'astro/types';
import { BaseHead } from '@layouts/BaseHead';

import '../../styles/global.css';
import './BaseHtml.style.module.css';

export type CSSTheme = 'default' | 'dark-theme';

export interface BaseHtmlProps {
  theme?: CSSTheme;
}

interface Props extends HTMLAttributes<'html'>, BaseHtmlProps {}

const { theme = 'default', title, ...props } = Astro.props;
---

<!doctype html>
<html
  data-theme={theme}
  lang='en'
  title={title}
  class='bg-primary h-auto min-h-dvh'
  {...props}
>
  <head>
    <meta charset='utf-8' />
    <link
      rel='apple-touch-icon'
      sizes='180x180'
      href='/images/apple-touch-icon.png'
    />
    <link rel='icon' type='image/x-icon' href='/images/favicon.ico' />
    <link
      rel='icon'
      type='image/png'
      sizes='32x32'
      href='/images/favicon-32x32.png'
    />
    <link
      rel='icon'
      type='image/png'
      sizes='16x16'
      href='/images/favicon-16x16.png'
    />
    <link rel='manifest' href='/site.webmanifest' />
    <meta name='viewport' content='width=device-width, initial-scale=1' />
    <meta name='generator' content={Astro.generator} />

    <BaseHead title={title ? `${title} - DuckyCoding` : 'DuckyCoding'} />
  </head>
  <body class=`min-h-full`>
    <slot />
  </body>
</html>
