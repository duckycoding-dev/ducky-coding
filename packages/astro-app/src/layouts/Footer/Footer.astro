---
import type { HTMLAttributes } from 'astro/types';
import { AnimatedWheel } from '@components/AnimatedWheel';
import resolveConfig from 'tailwindcss/resolveConfig';
import tailwindConfig from 'tailwind.config.mjs';

export interface FooterProps {}

interface Props extends HTMLAttributes<'footer'>, FooterProps {}

const { class: className, ...props } = Astro.props;
---

<footer
  class='bg-primary-700 border-comic border-secondary py-8 [grid-area:footer]'
>
  <div
    class='mx-auto flex w-full max-w-7xl flex-col items-stretch gap-8 px-8 md:flex-row'
  >
    <section class='bg-primary-700 min-h-8 w-full'>
      <h2 class='text-center md:text-start'>Stay in touch</h2>
      <AnimatedWheel
        iconSize={25}
        spinDuration={10}
        iconBackgroundColor={'var(--color-primary-700)'}
      />
    </section>
    <section class='min-h-12 w-full bg-red-700'></section>
  </div>
</footer>
