---
import { HolyGrailLayout } from '@layouts/HolyGrailLayout';
import { Button } from '../components/Button';
---

<HolyGrailLayout
  seoProps={{
    description:
      "Login into your DuckyCoding's blog account: manage your favorite posts!.",
    extend: {
      meta: [
        {
          name: 'keywords',
          content: 'DuckyCoding, web development, login, auth',
        },
      ],
    },
  }}
>
  <h1 class='mb-8 text-center text-4xl font-extrabold'>Login</h1>
  <p class='mb-8 text-center text-lg'>
    Access your account to manage your favorite posts and more.
  </p>
  <form method='post' action='/api/v1/login' class='flex flex-col'>
    <label for='username' id='username-label'
      >Username: <input type='text' name='username' id='username' /></label
    >
    <label for='password' id='password-label'
      >Password: <input type='password' name='password' id='password' /></label
    >
    <Button type='submit' variant={'contained'}>Login</Button>
  </form>
</HolyGrailLayout>

<style></style>
