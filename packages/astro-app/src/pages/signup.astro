---
import { Button } from '@components/Button';
import { HolyGrailLayout } from '@layouts/HolyGrailLayout';
---

<HolyGrailLayout
  seoProps={{
    description:
      "Signup to DuckyCoding's blog: web development articles and guides at your fingertips.",
    extend: {
      meta: [
        {
          name: 'keywords',
          content: 'DuckyCoding, web development, signup, auth',
        },
      ],
    },
  }}
>
  <h1 class='mb-8 text-center text-4xl font-extrabold'>Signup</h1>
  <p class='mb-8 text-center text-lg'>
    Create a free account to manage your favorite posts, save and like them!
  </p>
  <form
    method='post'
    action='/api/v1/signup'
    class='flex flex-col items-start gap-4'
  >
    <label for='username' id='username-label'
      >Username: <input type='text' name='username' id='username' /></label
    >
    <label for='email' id='email-label'
      >Email: <input type='email' name='email' id='email' /></label
    >
    <label for='name' id='name-label'
      >Name: <input type='text' name='name' id='name' /></label
    >
    <label for='password' id='password-label'
      >Password: <input type='password' name='password' id='password' /></label
    >
    <Button type='submit' variant={'contained'}>Submit</Button>
  </form>
</HolyGrailLayout>

