---
import { Link } from '@components/Link';
import { TopicCard } from '@components/TopicCard';
import { HolyGrailLayout } from '@layouts/HolyGrailLayout';
---

<HolyGrailLayout
  title='Topics'
  seoProps={{
    description:
      "Here's a list of all the topics I've written about in my articles: find what you need in a nicely organized way.",
    extend: {
      meta: [
        {
          name: 'keywords',
          content: 'DuckyCoding, web development, topics, articles',
        },
      ],
    },
  }}
>
  <h1 class='pb-8 text-center text-4xl font-extrabold'>Topics</h1>
  <div class='grid-container grid grid-cols-1 gap-5'>
    <TopicCard
      imageSrc='https://picsum.photos/300/200?random=1'
      title='Astro'
    />
    <TopicCard
      imageSrc='https://picsum.photos/300/200?random=1'
      title='React'
    />
    <TopicCard
      imageSrc='https://picsum.photos/300/200?random=1'
      title='Angular'
    />
    <TopicCard imageSrc='https://picsum.photos/300/200?random=1' title='Vue' />
    <TopicCard
      imageSrc='https://picsum.photos/300/200?random=1'
      title='Title with a long text that goes on multiple lines'
    />
  </div>
</HolyGrailLayout>

<style>
  @media (width >= 500px) {
    .grid-container {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (width >= 768px) {
    .grid-container {
      grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    }
  }
</style>
