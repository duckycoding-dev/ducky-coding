    "url": "git+https://github.com/duckycoding-dev/ducky-coding.git"
  },
  "bugs": {
    "url": "https://github.com/duckycoding-dev/ducky-coding/issues"
  },
  "devDependencies": {
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.0.5",
    "eslint-plugin-astro": "^1.3.1",
    "eslint-plugin-prettier": "^5.2.3",
    "lerna": "^8.1.2",
    "lightningcss": "^1.30.1",
    "nx": "18.0.7",
    "prettier": "^3.5.3",
