            ['TypeScript', 'React', 'Astro', 'Tailwind', 'Vue', 'Next.js'].map(
              (skill) => (
                <div class='bg-accent text-secondary hover:bg-accent-700 rounded-lg px-3 py-2 text-center font-semibold transition-colors'>
